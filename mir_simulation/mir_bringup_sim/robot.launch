<?xml version="1.0"?>
<launch>

  <arg name="init_pos_x" default="0.0"/>
  <arg name="init_pos_y" default="0.0"/>
  <arg name="init_pos_z" default="0.0"/>

  <!-- upload robot params (joint configurations) -->
  <include file="$(find mir_default_robot_config)/upload_param.launch" />

  <!-- start gazebo and load environment -->
  <include file="$(find mcr_gazebo_worlds)/ros/launch/$(env ROBOT_ENV).launch" />

  <!-- upload robot description -->
  <param name="robot_description" command="$(find xacro)/xacro.py $(find mir_hardware_config)/$(env ROBOT)/urdf/robot.urdf.xacro" />
  <node pkg="gazebo_ros" type="spawn_model" name="spawn_robot" respawn="false" output="screen"
    args="-param robot_description
          -urdf
          -x $(arg init_pos_x)
          -y $(arg init_pos_y)
          -z $(arg init_pos_z)
          -model youbot">
  </node>

  <!-- launch joint state controller -->
  <include file="$(find youbot_gazebo_control)/launch/joint_state_controller.launch" />

  <!-- launch robot state controller -->
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
    <param name="publish_frequency" type="double" value="100.0" />
  </node>

  <!-- load robot specific launch files -->
  <include file="$(find mir_bringup_sim)/robots/$(env ROBOT).launch" />

</launch>
